<UserControl x:Class="SmartRestaurant.Desktop.Components.Order.OrderItemComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartRestaurant.Desktop.Components.Order"
             mc:Ignorable="d" 
             Height="55">
    <Border
        Margin="10 4 10 4"
        CornerRadius="5"
        BorderThickness="1"
        BorderBrush="Gray"
        Background="White">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                x:Name="tb_Number"
                Text="1"
                Margin="10 0 0 0"
                Style="{DynamicResource InfoLabel}"/>

            <TextBlock
                Grid.Column="1"
                x:Name="tb_Product_Name"
                Text="Palov"
                Margin="0 0 10 0"
                Style="{DynamicResource InfoLabel}"/>

            <TextBlock
                Grid.Column="2"
                x:Name="tb_Product_Category"
                Text="Ovqat"
                Margin="0 0 10 0"
                Style="{DynamicResource InfoLabel}"/>

            <TextBlock
                Grid.Column="3"
                x:Name="tb_Product_Price"
                Text="65 000"
                Style="{DynamicResource InfoLabel}"/>

            <TextBlock
                Grid.Column="4"
                x:Name="tb_Product_Quantity"
                Text="2"
                Style="{DynamicResource InfoLabel}"/>

        </Grid>
        
    </Border>
</UserControl>
