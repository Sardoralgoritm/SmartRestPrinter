<UserControl x:Class="SmartRestaurant.Desktop.Components.OrderSummaryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartRestaurant.Desktop.Components"
             mc:Ignorable="d" 
             Height="40"
             Margin="0,3">
    <Border Background="#FFFFFF"
            Padding="8"
            CornerRadius="6"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">
        
        <Grid
            VerticalAlignment="Center">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            
            <TextBlock 
                x:Name="txtProductName"
                Text="Product Name"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                FontSize="14"
                Margin="10,0,0,0"/>

            <TextBlock
                x:Name="txtProductPrice"
                Grid.Column="1"
                Text="15000"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                FontSize="14"
                Margin="10,0,0,0"/>

            
            <TextBlock 
                x:Name="txtProductCount"
                Grid.Column="2"
                Text="×1"
                Margin="5 0 20 0"
                VerticalAlignment="Center"
                Foreground="#757575"
                FontWeight="SemiBold"
                FontSize="13"/>

            
            <Button
                x:Name="btnCancel"
                Grid.Column="3"
                Margin="0 0 5 0"
                Style="{StaticResource CancelIconButton}"
                Click="Cancel_Click"/>

            <Button
                x:Name="btnBossCancel"
                Grid.Column="3"
                Visibility="Collapsed"
                Margin="0 0 5 0"
                Style="{StaticResource CancelIconButton}"
                Click="Boss_Cancel_Click"/>

        </Grid>
    </Border>
</UserControl>
