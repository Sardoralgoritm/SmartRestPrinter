<UserControl x:Class="SmartRestaurant.Desktop.Components.OrderComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartRestaurant.Desktop.Components"
             mc:Ignorable="d" 
             Height="60">
    <Border
        Name="Order_Border"
        Margin="10 4 10 4"
        CornerRadius="5"
        Background="White"
        BorderBrush="Gray"
        BorderThickness="0.5">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="1"
                Margin="10 0 0 0"
                Name="tb_Number"
                Style="{DynamicResource InfoLabel}"/>

            <TextBlock
                Grid.Column="1"
                x:Name="tb_transaction_id"
                Text="190420250002"
                Style="{DynamicResource InfoLabel}"/>

            <TextBlock
                Grid.Column="2"
                Text="Table 1"
                Name="tb_Table_Name"
                Style="{DynamicResource InfoLabel}"/>

            <TextBlock
                Grid.Column="3"
                Text="Hakimjon"
                Name="tb_waiter_name"
                Style="{DynamicResource InfoLabel}"/>

            <TextBlock
                Grid.Column="4"
                Text="100000"
                Name="tb_Order_Summa"
                Style="{DynamicResource InfoLabel}"/>

            <Button
                Name="View_Button"
                Grid.Column="5"
                Height="35"
                Width="80"
                Content="Ko'rish"
                FontSize="16"
                Click="View_Button_Click"
                Style="{DynamicResource EditButton}"/>

        </Grid>
            
    </Border>
</UserControl>
