<UserControl x:Class="SmartRestaurant.Desktop.Components.TableCRUDComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartRestaurant.Desktop.Components"
             mc:Ignorable="d" 
             Height="60"
             Width="Auto"
             Margin="5">
    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <!-- 🆔 Table Number -->
            <TextBlock x:Name="txtNumber" Grid.Column="0" 
                       FontSize="14" 
                       Text="Table 1"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"/>

            <!-- 🔄 Status -->
            <TextBlock x:Name="txtStatus" Grid.Column="1" 
                       FontSize="14" 
                       Text="Free"
                       VerticalAlignment="Center"
                       Foreground="Gray"/>

            <!-- ✏️ Edit -->
            <Button Content="Yangilash" Grid.Column="2" 
                    Width="100"
                    Height="35"
                    FontSize="16"
                    Style="{StaticResource EditButton}"
                    Click="Edit_Click"/>

            <!-- ❌ Delete -->
            <Button Content="O'chirish" Grid.Column="3"
                    Width="100"
                    Height="35"
                    FontSize="16"
                    Style="{StaticResource DeleteButton}"
                    Click="Delete_Click"/>
        </Grid>
    </Border>
</UserControl>
