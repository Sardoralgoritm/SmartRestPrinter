<UserControl x:Class="SmartRestaurant.Desktop.Components.ProductCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartRestaurant.Desktop.Components"
             mc:Ignorable="d" 
             Height="120">
    
    <Border Background="White"
            CornerRadius="8"
            BorderBrush="#DDD"
            BorderThickness="1"
            Margin="5"
            Effect="{StaticResource ShadowEffect}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.25"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>

            <!-- 🍕 Rasm -->
            <Image Source="/Assets/Images/default_meal.jpg" 
                   x:Name="productImage"
                   Margin="10 0 0 0"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Stretch="Uniform"/>

            <!-- 📝 Nomi va narxi -->
            <Grid 
                Grid.Column="1" 
                Margin="30 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                
                <TextBlock
                    x:Name="product_name"
                    Text="Margherita" 
                    FontSize="16" 
                    TextWrapping="Wrap"
                    FontWeight="SemiBold" 
                    VerticalAlignment="Center"/>
                
                <TextBlock 
                    Grid.Row="1"
                    x:Name="product_price"
                    Text="$12.00" 
                    FontSize="16" 
                    VerticalAlignment="Top"
                    Foreground="Gray"/>
            </Grid>

            <Border
                Margin="0 10"
                Background="Gray"
                Grid.Column="2"/>

            <Button 
                Grid.Column="3" 
                Style="{StaticResource AddProductButton}"
                Click="Button_Click"/>
        </Grid>
    </Border>
</UserControl>
