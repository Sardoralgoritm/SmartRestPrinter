<Window x:Class="SmartRestaurant.Desktop.Windows.Products.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows.Products"
        xmlns:ld="clr-namespace:SmartRestaurant.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="AddProduct" 
        WindowStyle="None"
        WindowState="Maximized"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Border
        Width="500"
        Height="600"
        CornerRadius="10"
        Background="White">

        <Grid
            Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="Mahsulot qo'shish"
                Style="{DynamicResource TextBlockStyle}"/>

            <Button
                Name="close_button"
                Grid.Row="0"
                Style="{DynamicResource ClosedButton}"
                Click="Close_button_Click"/>

            <Grid Margin="30 10"
                  Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border 
                    Grid.Row="0" Margin="0,0,0,20"
                    x:Name="product_Image_Border"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Width="150"
                    Height="150"
                    CornerRadius="10"
                    Background="#F5F5F5"
                    MouseDown="product_Image_Border_MouseDown"
                    MouseEnter="product_Image_Border_MouseEnter"
                    MouseLeave="product_Image_Border_MouseLeave"
                    ToolTip="Rasm yuklash uchun bosing">

                    <Grid>
                        <Image 
                            x:Name="product_Image" 
                            Width="140" Height="140" 
                            Stretch="UniformToFill"/>

                        <StackPanel 
                            x:Name="uploadPlaceholder" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="Visible">

                            <Path 
                                x:Name="cameraIcon" 
                                Data="{DynamicResource camera}"
                                Fill="#9E9E9E"
                                Width="48"
                                Height="48"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"/>

                            <TextBlock 
                                Text="Rasm yuklash"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="#757575"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0"/>

                            <TextBlock 
                                Text="Tanlash uchun bosing"
                                FontSize="12"
                                Foreground="#9E9E9E"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel
                            x:Name="ImageLoader"
                            Visibility="Collapsed"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Orientation="Vertical">

                            <Viewbox
                                Width="65"
                                Height="65">

                                <ld:Loader
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Viewbox>

                            <TextBlock 
                                Text="Yuklanmoqda..."
                                FontSize="14"
                                Foreground="#555"
                                HorizontalAlignment="Center"
                                FontWeight="SemiBold"/>

                        </StackPanel>

                        <Border 
                            x:Name="hoverOverlay"
                            Background="#000000"
                            Opacity="0"
                            CornerRadius="10">

                            <StackPanel 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                
                                <Path 
                                    Data="M3,5H9V11H3V5M5,7V9H7V7H5M11,7H21V9H11V7M11,15H21V17H11V15M5,13V15H7V13H5M3,13H9V19H3V13Z" 
                                    Fill="White" 
                                    Width="24" 
                                    Height="24"/>
                                
                                <TextBlock 
                                    Text="Rasmni o'zgartirish"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    HorizontalAlignment="Center"
                                    Margin="0,4,0,0"/>
                                
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                
                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,15">
                    
                    <TextBlock
                        Text="Nomi"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Margin="0 0 0 5"/>
                    
                    <TextBox
                        x:Name="txtName"
                        FontSize="14"
                        Height="30"/>
                    
                </StackPanel>

                
                <StackPanel
                    Grid.Row="2"
                    Margin="0,0,0,15">
                    
                    <TextBlock
                        Text="Narxi"
                        FontSize="16"
                        FontWeight="SemiBold" 
                       Margin="0 0 0 5"/>
                    
                    <TextBox
                        x:Name="txtPrice"
                        FontSize="14"
                        Height="30"/>
                    
                </StackPanel>

                
                <StackPanel
                    Grid.Row="3"
                    Margin="0,0,0,15">
                    
                    <TextBlock
                        Text="Kategoriyasi"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Margin="0 0 0 5"/>
                    
                    <ComboBox
                        MaxDropDownHeight="100"
                        x:Name="cmbCategory"
                        FontSize="16"
                        Height="30"/>
                    
                </StackPanel>
                
                <StackPanel
                    Grid.Row="3"
                    Margin="0 70,0,20">

                    <TextBlock
                        Text="Printer"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Margin="0 0 0 5"/>

                     <ComboBox
                        MaxDropDownHeight="100"
                        x:Name="cmbPrinter"
                        FontSize="16"
                        Height="30"/>

                </StackPanel>


                <StackPanel
                    Grid.Row="4" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
                    
                    <Button
                        Content="Bekor qilish"
                        Width="100"
                        Height="35"
                        Style="{StaticResource CancelButton}"
                        Click="Cancel_Click"/>
                    
                    <Button
                        Content="Saqlash"
                        Width="100"
                        Height="35"
                        Style="{StaticResource PrimaryButton}"
                        Click="Save_Click"/>
                    
                </StackPanel>
            </Grid>

        </Grid>

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Opacity="9"
                ShadowDepth="0"
                Color="Gray">

            </DropShadowEffect>
        </Border.Effect>

    </Border>
</Window>
