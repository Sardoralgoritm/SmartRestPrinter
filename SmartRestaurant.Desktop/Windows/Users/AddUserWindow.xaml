<Window x:Class="SmartRestaurant.Desktop.Windows.Users.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows.Users"
        xmlns:ld="clr-namespace:SmartRestaurant.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="AddUserWindow"
        WindowStyle="None"
        WindowState="Maximized"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Border
        Width="500"
        Height="650"
        CornerRadius="10"
        Background="White">

        <Grid
            Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="Hodim qo'shish"
                Style="{DynamicResource TextBlockStyle}"/>

            <Button
                Name="close_button"
                Grid.Row="0"
                Style="{DynamicResource ClosedButton}"
                Click="Close_button_Click"/>

            <Grid Margin="30 10"
                  Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border 
                    Grid.Row="0" Margin="0,0,0,20"
                    x:Name="product_Image_Border"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Width="150"
                    Height="150"
                    CornerRadius="10"
                    Background="#F5F5F5"
                    MouseDown="user_image_border_mouse_down"
                    MouseEnter="user_image_border_mouse_enter"
                    MouseLeave="user_image_border_mouse_leave"
                    ToolTip="Rasm yuklash uchun bosing">

                    <Grid>
                        <Image 
                            x:Name="user_image" 
                            Width="140" Height="140" 
                            Stretch="UniformToFill"/>

                        <StackPanel 
                            x:Name="uploadPlaceholder" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="Visible">

                            <Path 
                                x:Name="cameraIcon" 
                                Data="{DynamicResource camera}"
                                Fill="#9E9E9E"
                                Width="48"
                                Height="48"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"/>

                            <TextBlock 
                                Text="Rasm yuklash"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="#757575"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0"/>

                            <TextBlock 
                                Text="Tanlash uchun bosing"
                                FontSize="12"
                                Foreground="#9E9E9E"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel
                            x:Name="ImageLoader"
                            Visibility="Collapsed"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Orientation="Vertical">

                            <Viewbox
                                Width="65"
                                Height="65">
                                
                                <ld:Loader
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Viewbox>

                            <TextBlock 
                                Text="Yuklanmoqda..."
                                FontSize="14"
                                Foreground="#555"
                                HorizontalAlignment="Center"
                                FontWeight="SemiBold"/>
                            
                        </StackPanel>


                        <Border 
                            x:Name="hoverOverlay"
                            Background="#000000"
                            Opacity="0"
                            CornerRadius="10">

                            <StackPanel 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">

                                <Path 
                                    Data="M3,5H9V11H3V5M5,7V9H7V7H5M11,7H21V9H11V7M11,15H21V17H11V15M5,13V15H7V13H5M3,13H9V19H3V13Z" 
                                    Fill="White" 
                                    Width="24" 
                                    Height="24"/>

                                <TextBlock 
                                    Text="Rasmni o'zgartirish"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    HorizontalAlignment="Center"
                                    Margin="0,4,0,0"/>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>


                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,15">

                    <TextBlock
                        Text="Ismi"
                        Style="{DynamicResource InfoLabel}"
                        Margin="0 0 0 5"/>

                    <TextBox
                        x:Name="txtName"
                        FontSize="14"
                        Height="30"/>

                </StackPanel>


                <StackPanel
                    Grid.Row="2"
                    Margin="0,0,0,15">

                    <TextBlock
                        Text="Familiyasi"
                        Style="{DynamicResource InfoLabel}"
                        Margin="0 0 0 5"/>

                    <TextBox
                        x:Name="txtSurname"
                        FontSize="14"
                        Height="30"/>

                </StackPanel>

                <StackPanel
                    Grid.Row="3"
                    Margin="0 0,0,15">

                    <TextBlock
                        Text="Telefon raqami"
                        Style="{DynamicResource InfoLabel}"/>

                    <TextBox
                        x:Name="txtPhoneNumber"
                        FontSize="14"
                        Height="30"
                        MaxLength="13"/>

                </StackPanel>

                <StackPanel
                    Grid.Row="4"
                    Margin="0 0,0,15">

                    <TextBlock
                        Text="Paroli"
                        Style="{DynamicResource InfoLabel}"/>

                    <TextBox
                        x:Name="txtPassword"
                        FontSize="14"
                        Height="30"/>

                </StackPanel>


                <StackPanel
                    Grid.Row="5"
                    Margin="0,0,0,15">

                    <TextBlock
                        Text="Lavozimi"
                        Style="{DynamicResource InfoLabel}"
                        Margin="0 0 0 5"/>

                    <ComboBox
                        MaxDropDownHeight="100"
                        x:Name="cmbRole"
                        FontSize="16"
                        Height="30">

                        <ComboBoxItem Content="Boss"/>
                        <ComboBoxItem Content="Ofitsiant" />
                        <ComboBoxItem Content="Manager" />
                    </ComboBox>

                </StackPanel>


                <StackPanel
                    Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">

                    <Button
                        Content="Bekor qilish"
                        Width="100"
                        Height="35"
                        Style="{StaticResource CancelButton}"
                        Click="Cancel_Click"/>

                    <Button
                        Content="Saqlash"
                        Width="100"
                        Height="35"
                        Style="{StaticResource PrimaryButton}"
                        Click="Save_Click"/>

                </StackPanel>
            </Grid>
        </Grid>

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Opacity="9"
                ShadowDepth="0"
                Color="Gray">

            </DropShadowEffect>
        </Border.Effect>

    </Border>
</Window>