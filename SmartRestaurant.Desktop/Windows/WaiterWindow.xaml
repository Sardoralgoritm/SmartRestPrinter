<Window x:Class="SmartRestaurant.Desktop.Windows.WaiterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded">
    <DockPanel Background="White">
        <Border 
            Background="#f5f5f5" 
            DockPanel.Dock="Top" 
            Padding="10" 
            BorderBrush="LightGray" 
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="95" />
                </Grid.ColumnDefinitions>

                <StackPanel 
                    Orientation="Horizontal" 
                    Grid.Column="0" 
                    HorizontalAlignment="Left">

                    <RadioButton 
                        IsChecked="True"
                        Name="MainPOS_Button"
                        Content="Asosiy" 
                        Style="{DynamicResource NavigationButton}" 
                        Click="MainPOS_Click"/>

                </StackPanel>

                <Button 
                    Grid.Column="1"
                    Name="Minus_Button"
                    HorizontalAlignment="Left"
                    Click="Minus_Button_Click"
                    Style="{StaticResource MinimizedButton}"/>

                <Button 
                    Grid.Column="1"
                    Name="Close_Button"
                    HorizontalAlignment="Right"
                    Style="{StaticResource CloseButton}"
                    Click="Close_Click"/>

            </Grid>
        </Border>

        <Grid>

            <Frame 
                x:Name="MainFrame" 
                NavigationUIVisibility="Hidden"/>

        </Grid>


    </DockPanel>
</Window>
