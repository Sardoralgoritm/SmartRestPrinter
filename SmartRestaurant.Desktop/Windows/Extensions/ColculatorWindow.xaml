<Window x:Class="SmartRestaurant.Desktop.Windows.Extensions.ColculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows.Extensions"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Border
        Height="550"
        Width="650"
        CornerRadius="8"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>

            <Button
                Name="Close_Button"
                Click="Close_Button_Click"
                Style="{DynamicResource ClosedButton}"/>

            <Grid
                Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="20 10">

                    <TextBlock
                        Margin="10 0"
                        FontSize="20"
                        Text="To'lanadigan summa :"
                        Style="{DynamicResource InfoLabel}"/>

                    <TextBox
                        Margin="10 0"
                        IsReadOnly="True"
                        x:Name="txt_TotalPrice"
                        PreviewTextInput="txt_Total_PreviewTextInput"
                        Style="{DynamicResource tbPaymentstyle}"/>

                    <TextBlock
                        Margin="10 20 0 0"
                        FontSize="20"
                        Text="Berilgan summa :"
                        Style="{DynamicResource InfoLabel}"/>

                    <TextBox
                        Margin="10 0"
                        x:Name="txt_Payment_Price"
                        PreviewTextInput="txt_Total_PreviewTextInput"
                        PreviewKeyDown="txt_Payment_Price_PreviewKeyDown"
                        Style="{DynamicResource tbPaymentstyle}"/>

                    <TextBlock
                        Margin="10 20 0 0"
                        FontSize="20"
                        Text="Qaytim summasi :"
                        Style="{DynamicResource InfoLabel}"/>

                    <TextBox
                        Margin="10 0"
                        IsReadOnly="True"
                        x:Name="txt_Refund_Price"
                        PreviewTextInput="txt_Total_PreviewTextInput"
                        Style="{DynamicResource tbPaymentstyle}"/>

                    <Label
                        Name="lb_Quantity"
                        Margin="0 10 0 0"
                        FontSize="16"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Content="Kiritilgan mablag' yetarli emas"
                        HorizontalAlignment="Center"/>

                    <Button
                        Name="Colculate_Button"
                        Margin="0 5 0 0"
                        Height="50"
                        Width="295"
                        Content="Hisoblash"
                        FontSize="25"
                        Click="Colculate_Button_Click"
                        Style="{DynamicResource Colculator_Button}"/>

                </StackPanel>

                <StackPanel
                    HorizontalAlignment="Center"
                    Margin="10 40 10 0"
                    Grid.Column="1">

                    <StackPanel
                        Margin="0 1"
                        Orientation="Horizontal">
                        
                        <Button
                            Content="1"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>
                        
                        <Button
                            Content="2"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                        <Button
                            Content="3"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">

                        <Button
                            Content="4"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                        <Button
                            Content="5"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                        <Button
                            Content="6"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">

                        <Button
                            Content="7"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                        <Button
                            Content="8"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                        <Button
                            Content="9"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">

                        <Button
                            Content="0"
                            Click="Button_Click"
                            Style="{DynamicResource Colculator_Button}"/>

                        <Button
                            Name="Clear_Button"
                            Click="Clear_Button_Click"
                            Style="{DynamicResource Clear_Button}"/>

                    </StackPanel>

                </StackPanel>

            </Grid>

            <Grid
                Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="btn_free"
                    Height="50"
                    Width="180"
                    Content="Tekinga berish"
                    FontSize="20"
                    Style="{DynamicResource NeutralButtonStyle}"
                    Click="btn_free_Click"
                    Margin="5 0 0 0"/>

                <Button
                    Grid.Column="1"
                    x:Name="btn_check"
                    Height="50"
                    Width="180"
                    Content="Chek chiqarish"
                    FontSize="20"
                    Style="{DynamicResource CheckButtonStyle}"
                    Click="btn_check_Click"/>

                <Button
                    Grid.Column="2"
                    Name="Save_Button"
                    Height="50"
                    Width="180"
                    Content="To'landi"
                    FontSize="20"
                    Click="Save_Button_Click"
                    Style="{DynamicResource PayButton}"
                    Margin="0 0 5 0"/>
            </Grid>

        </Grid>

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Opacity="9"
                ShadowDepth="0"
                Color="Gray">

            </DropShadowEffect>
        </Border.Effect>

    </Border>
</Window>
