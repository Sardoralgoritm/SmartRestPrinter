<Window x:Class="SmartRestaurant.Desktop.Windows.Extensions.TableTransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows.Extensions"
        mc:Ignorable="d"
        Title="Buyurtmani Ko'chirish" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Background="White"
            Padding="25,20"
            BorderBrush="#DEE2E6"
            BorderThickness="0,0,0,1">
            
            <StackPanel>
                <TextBlock
                    x:Name="HeaderTitle" 
                    Text="Buyurtmani Ko'chirish" 
                    FontSize="20" 
                    FontWeight="SemiBold" 
                    Foreground="#212529"
                    Margin="0,0,0,5"/>
                
                <TextBlock
                    x:Name="HeaderSubtitle" 
                    Text="Stol 1 dan boshqa stolga ko'chirish" 
                    FontSize="14" 
                    Foreground="#6C757D"/>
                
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Background="White"
            Padding="25,0"
            BorderBrush="#DEE2E6"
            BorderThickness="0,0,0,1">
            
            <ScrollViewer
                HorizontalScrollBarVisibility="Hidden"
                VerticalScrollBarVisibility="Hidden"
                IsManipulationEnabled="True"
                PanningMode="HorizontalOnly"
                CanContentScroll="False"
                Padding="0 3 0 0">
                <StackPanel
                    x:Name="spTableCategoryButtons"
                    Height="60"
                    Orientation="Horizontal"/>
            </ScrollViewer>
        </Border>

        <ScrollViewer Grid.Row="2" 
              VerticalScrollBarVisibility="Auto" 
              HorizontalScrollBarVisibility="Disabled"
              Background="#F8F9FA">
            <StackPanel Margin="25,20">
                <TextBlock Text="Qaysi stolga ko'chirish?" 
                  FontSize="16" 
                  FontWeight="SemiBold" 
                  Foreground="#343A40" 
                  Margin="0,0,0,15"/>

                <UniformGrid x:Name="DynamicTablesGrid" 
                    Columns="3"/>
            </StackPanel>
        </ScrollViewer>

        <Border
            Grid.Row="3"
            Background="White"
            Padding="25,15"
            BorderBrush="#DEE2E6"
            BorderThickness="0,1,0,0">
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Bekor qilish" 
                       Style="{StaticResource Cancel_Button}" 
                       Click="CancelButton_Click"
                       MinWidth="120"/>
                
                <Button x:Name="TransferButton" 
                       Content="Ko'chirish" 
                       Style="{StaticResource ModernButton}" 
                       Click="TransferButton_Click"
                       MinWidth="120"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
