<Window x:Class="SmartRestaurant.Desktop.Windows.Extensions.EnterPhoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows.Extensions"
        mc:Ignorable="d"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Border 
        Height="275" 
        Width="380"
        CornerRadius="10"
        Padding="5"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock
                Text="Telefon raqamini kiriting"
                Style="{DynamicResource TextBlockStyle}"/>

            <!-- Close button -->
            <Button
                Name="close_button"
                Grid.Row="0"
                Style="{DynamicResource ClosedButton}"
                Click="Close_button_Click"/>

            <!-- Main Content -->
            <Grid
                Margin="25 15 25 15"
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="65"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Info Text -->
                <TextBlock
                    Grid.Row="0"
                    TextWrapping="Wrap"
                    Text="Lotoreyada qatnashish uchun telefon raqamingizni kiriting:"
                    FontSize="16"
                    Margin="10 0"
                    TextAlignment="Center"
                    Foreground="#A6A6A6"/>

                <!-- Phone input -->
                <StackPanel 
                    Grid.Row="1" 
                    Margin="0,0,0,20">

                    <TextBlock 
                        Text="Telefon raqami"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Margin="0,0,0,5"/>

                    <Border
                        Height="40"
                        CornerRadius="5"
                        BorderThickness="0.5"
                        BorderBrush="{DynamicResource BorderColor}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Path 
                                Fill="#F0A81A" 
                                Data="{DynamicResource phone}"
                                Height="25"
                                Width="25"
                                Stretch="Uniform"/>

                            <TextBox
                                x:Name="txtPhoneNumber"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                Margin="5,0"
                                FontSize="18"
                                FontWeight="SemiBold"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                MaxLength="13"
                                KeyDown="txtPhoneNumber_KeyDown"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Confirm Button -->
                <Button
                    Grid.Row="2"
                    Content="Kiritish"
                    Width="200"
                    Height="35"
                    Style="{StaticResource PrimaryButton}"
                    Click="ConfirmButton_Click"/>
            </Grid>
        </Grid>

        <!-- Shadow -->
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Opacity="9"
                ShadowDepth="0"
                Color="Gray"/>
        </Border.Effect>

    </Border>
</Window>
