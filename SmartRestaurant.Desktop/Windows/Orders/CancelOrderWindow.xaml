<Window x:Class="SmartRestaurant.Desktop.Windows.Orders.CancelOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows.Orders"
        mc:Ignorable="d"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        Background="Transparent">

    <Border 
        Height="275" 
        Width="380"
        CornerRadius="10"
        Padding="5"
        Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="windowTitle"
                Text="Mahsulotni bekor qilish"
                Style="{DynamicResource TextBlockStyle}"/>

            <Button
                Name="close_button"
                Grid.Row="0"
                Style="{DynamicResource ClosedButton}"
                Click="Close_button_Click"/>

            <Grid
                Margin="25 15 25 15"
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="65"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock
                    x:Name="description"
                    Grid.Row="0"
                    TextWrapping="Wrap"
                    Text="Hodim tomonidan kiritilgan mahsulotni bekor qilish uchun rahbardan parol talab qilinadi."
                    FontSize="16"
                    Margin="10 0"
                    TextAlignment="Center"
                    Foreground="#A6A6A6"/>

                <StackPanel 
                    Grid.Row="1" 
                    Margin="0,0,0,20">

                    <TextBlock 
                        Text="Parol"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Margin="0,0,0,5"/>

                    <Border
                        Height="40"
                        CornerRadius="5"
                        BorderThickness="0.5"
                        BorderBrush="{DynamicResource BorderColor}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <Path 
                                Fill="#F0A81A" 
                                Data="{DynamicResource lock}"
                                Height="25"
                                Width="25"
                                Stretch="Uniform"/>

                            <PasswordBox
                                Name="pbPassword"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                BorderThickness="0" 
                                HorizontalAlignment="Left"
                                Width="239"
                                KeyDown="txtPhoneNumber_KeyDown"/>

                            <TextBox 
                                x:Name="tbPassword" 
                                Grid.Column="1"
                                Visibility="Collapsed"
                                Margin="4"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                FontSize="18"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                KeyDown="txtPhoneNumber_KeyDown"/>

                            <Button
                                Grid.Column="2"
                                x:Name="btnVisible"
                                Click="btnVisible_Click"
                                Visibility="Visible"
                                Style="{DynamicResource btnLoginEyeVisible}"
                                />

                            <Button
                                Grid.Column="2"
                                x:Name="btnDisVisible"
                                Click="btnDisVisible_Click"
                                Visibility="Collapsed"
                                Style="{DynamicResource btnLoginEyeDisVisible}"
                                />
                        </Grid>
                    </Border>
                </StackPanel>

                <Button
                    Grid.Row="2"
                    Content="Kiritish"
                    Width="200"
                    Height="35"
                    Style="{StaticResource PrimaryButton}"
                    Click="Save_Click"/>
            </Grid>
        </Grid>

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Opacity="9"
                ShadowDepth="0"
                Color="Gray">

            </DropShadowEffect>
        </Border.Effect>

    </Border>
</Window>
