<Window x:Class="SmartRestaurant.Desktop.Windows.Products.OrderItemsViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows.Products"
        mc:Ignorable="d"
        Background="Transparent"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Border
        Height="600"
        Width="900"
        CornerRadius="10"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="25 0 0 0"
                    x:Name="st_deleting">

                    <TextBlock
                        Text="Buyurtmani o'chirgan rahbar: "
                        FontSize="17"
                        Foreground="Gray"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontWeight="Normal"/>


                    <TextBlock
                        x:Name="user_name"
                        Text="Azimjon"
                        FontSize="17"
                        FontWeight="Normal"
                        Foreground="Gray"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="5 0 0 0"/>
                </StackPanel>

                <Button
                    Grid.Column="1"
                    Name="Close_Button"
                    Click="Close_Button_Click"
                    Style="{DynamicResource ClosedButton}"/>
            </Grid>

            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="25 0 0 0">

                <TextBlock
                    Text="Buyurtmani qabul qilgan ofitsiant : "
                    FontSize="16"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>

                <TextBlock
                    x:Name="waiter_name"
                    Text="Sardorbek"
                    FontSize="18"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    Margin="5 0 0 0"/>

            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0 0 25 0">

                <TextBlock
                    x:Name="time_reason"
                    Text="O'chirilgan vaqt: "
                    FontWeight="Normal"
                    FontSize="17"
                    Foreground="Gray"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>

                <TextBlock
                    x:Name="time_at"
                    Text="2024-03-15 14:30"
                    FontSize="17"
                    FontWeight="Normal"
                    Foreground="Gray"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="5 0 0 0"/>
            </StackPanel>


            <Grid
                Margin="10 0 20 0"
                Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Text="No"
                    Margin="10 0 0 0"
                    Style="{DynamicResource InfoLabel}"/>

                <TextBlock
                    Grid.Column="1"
                    Text="Mahsulot nomi"
                    Style="{DynamicResource InfoLabel}"/>

                <TextBlock
                    Grid.Column="2"
                    Text="Turi"
                    Style="{DynamicResource InfoLabel}"/>

                <TextBlock
                    Grid.Column="3"
                    Text="Narxi"
                    Style="{DynamicResource InfoLabel}"/>

                <TextBlock
                    Grid.Column="4"
                    Text="Soni"
                    Style="{DynamicResource InfoLabel}"/>

            </Grid>

            <Grid
                Grid.Row="3">

                <ScrollViewer
                    PanningMode="VerticalOnly"
                    IsManipulationEnabled="True"
                    CanContentScroll="False"
                    Margin="0 0 0 10"
                    VerticalScrollBarVisibility="Hidden">

                    <StackPanel
                        x:Name="st_OrderItems"/>

                </ScrollViewer>
                
            </Grid>

            <Button
                x:Name="btn_canceled"
                Content="O'chirish"
                Grid.Row="4"
                Width="160"
                Height="40"
                FontSize="16"
                Margin="0 15 310 0"
                VerticalAlignment="Top"
                Style="{StaticResource DeleteButton}"
                Click="Delete_Click"/>
            
            <Button
                x:Name="Resend_ToKassa_Button"
                Grid.Row="4"
                Margin="0 15 280 0"
                Content="Kassaga qayta jo'natish"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Click="Resend_ToKassa_Button_Click"
                Style="{DynamicResource ReSendButton}"/>

            <Button
                x:Name="Resend_ToKitchen_Button"
                Grid.Row="4"
                Margin="0 15 20 0"
                Content="Oshpazga qayta jo'natish"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Resend_Button_Click"
                Style="{DynamicResource ReSendButton}"/>

        </Grid>

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Opacity="9"
                ShadowDepth="0"
                Color="Gray">

            </DropShadowEffect>
        </Border.Effect>

    </Border>
</Window>
