<Window x:Class="SmartRestaurant.Desktop.Windows.Categories.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartRestaurant.Desktop.Windows.Categories"
        mc:Ignorable="d"
        Title="AddCategory"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        Background="Transparent">
    
    <Border 
        Height="220" 
        Width="380"
        CornerRadius="10"
        Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="Kategoriya qo'shish"
                Style="{DynamicResource TextBlockStyle}"/>

            <Button
                Name="close_button"
                Grid.Row="0"
                Style="{DynamicResource ClosedButton}"
                Click="Close_button_Click"/>

            <Grid Margin="25"
                  Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel 
                Grid.Row="0" 
                Margin="0,0,0,15">
                
                <TextBlock 
                    Text="Kategoriya nomi"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Margin="0,0,0,5"/>
                
                <TextBox 
                    x:Name="txtCategoryName"
                    FontSize="14"
                    Height="32"
                    Padding="6,2"/>
            </StackPanel>

            <StackPanel 
                Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,10,0,0">
                
                <Button 
                    Content="Bekor qilish"
                    Width="100"
                    Height="35"
                    Style="{StaticResource CancelButton}"
                    Click="Cancel_Click"/>
                
                <Button 
                    Content="Saqlash"
                    Width="100"
                    Height="35"
                    Style="{StaticResource PrimaryButton}"
                    Click="Save_Click"/>
                
            </StackPanel>
        </Grid>
        </Grid>

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Opacity="9"
                ShadowDepth="0"
                Color="Gray">

            </DropShadowEffect>
        </Border.Effect>

    </Border>
</Window>
