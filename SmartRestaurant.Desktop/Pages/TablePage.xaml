<Page x:Class="SmartRestaurant.Desktop.Pages.TablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartRestaurant.Desktop.Pages"
      Title="TablePage"
      Loaded="Page_Loaded">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header and Add Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Stollar"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Grid.Column="0"
                       Margin="15 20 0 0"/>

            <Button Content="Stol qo'shish"
                    Width="120"
                    Height="35"
                    Style="{StaticResource PrimaryButton}"
                    Grid.Column="1"
                    Click="AddTable_Click"
                    Margin="0 20 15 0"/>
        </Grid>

        <!-- Table List Header -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Column Titles -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Stol nomi" FontSize="16" FontWeight="SemiBold" Margin="10 0 0 0"/>
                <TextBlock Text="Xolati" Grid.Column="1" FontSize="16" FontWeight="SemiBold" Margin="0 0 30 0"/>
            </Grid>

            <!-- Table List -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Hidden"
                          PanningMode="VerticalOnly"
                          IsManipulationEnabled="True"
                          CanContentScroll="False">
                <StackPanel x:Name="spTables" Orientation="Vertical"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
