<Page x:Class="SmartRestaurant.Desktop.Pages.MenuManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartRestaurant.Desktop.Components.Loader"
      Title="MenuManagementPage"
      Background="White"
      Loaded="Page_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Products Title -->
            <RowDefinition Height="Auto"/>
            <!-- Product Header -->
            <RowDefinition Height="2*"/>
            <!-- Products List -->
            <RowDefinition Height="Auto"/>
            <!-- Divider -->
            <RowDefinition Height="Auto"/>
            <!-- Category Title -->
            <RowDefinition Height="Auto"/>
            <!-- Category Header -->
            <RowDefinition Height="2*"/>
            <!-- Categories List -->
        </Grid.RowDefinitions>

        <!-- 🟢 Page Title and Buttons -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Menuni boshqarish"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>

            <TextBox
                Grid.Column="1"
                Name="tb_search_Product"
                TextChanged="tb_search_ProductTextChanged"
                Loaded="tb_search_Product_Loaded"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Style="{DynamicResource search}"
                Height="40"
                Margin="90 0 90 0"/>

            <StackPanel 
                Orientation="Horizontal" 
                Grid.Column="2" 
                HorizontalAlignment="Right">
                
                <Button 
                    Content="Mahsulot qo'shish" 
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,0,15,0" 
                    Click="Add_Product_Click"/>
                
                <Button 
                    Content="Kategoriya qo'shish"
                    Style="{StaticResource PrimaryButton}"
                    Click="Add_Category_Click"/>
                
            </StackPanel>
        </Grid>

        <!-- 🟩 Mahsulotlar sarlavha -->
        <TextBlock Grid.Row="1"
               Text="Mahsulotlar"
               FontSize="20"
               FontWeight="Bold"
               Margin="0,0,0,8"/>

        <!-- 📋 Product ustunlari -->
        <Grid Grid.Row="2" Margin="5,0,25, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="№" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center" Margin="5 0 0 0" HorizontalAlignment="Center"/>
            <TextBlock Text="Nomi" Grid.Column="1" FontWeight="SemiBold" FontSize="16" Margin="25 0 0 0"/>
            <TextBlock Text="Narxi" Grid.Column="2" FontWeight="SemiBold" FontSize="16" Margin="5 0 0 0" />
            <TextBlock Text="Kategoriyasi" Grid.Column="3" FontWeight="SemiBold" FontSize="16"/>
        </Grid>

        <Grid
            Grid.Row="3">

            <local:Loader
                x:Name="Loader"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Visibility="Collapsed"/>
            
            <ScrollViewer
                VerticalScrollBarVisibility="Hidden"
                PanningMode="VerticalOnly"
                IsManipulationEnabled="True"
                CanContentScroll="False"
                PanningDeceleration="0.001"
                PanningRatio="1">
                <StackPanel
                    x:Name="st_Products"
                    Orientation="Vertical"/>
                
            </ScrollViewer>

            <Label
                FontSize="16"
                Name="EmptyData"
                Content="Ma'lumot topilmadi."
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Foreground="Gray"
                FontWeight="SemiBold"
                Visibility="Collapsed"/>

        </Grid>

        <!-- 🧍 Divider -->
        <Border 
            Grid.Row="4"
            Height="2"
            Background="#9E9E9E"
            CornerRadius="1"
            Margin="0,20"/>

        <!-- 🟨 Kategoriyalar sarlavha -->
        <TextBlock Grid.Row="5"
               Text="Kategoriyalar"
               FontSize="20"
               FontWeight="Bold"
               Margin="0,10,0,8"/>

        <Grid
            Grid.Row="6" 
            Margin="5,0,25,10">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="№"
                FontWeight="SemiBold"
                FontSize="16"
                VerticalAlignment="Center"
                Margin="5 0 0 0"
                HorizontalAlignment="Center"/>
            
            <TextBlock Grid.Column="1" Text="Kategoriya nomi" FontWeight="SemiBold" FontSize="16" Margin="25 0 0 0"/>
        </Grid>

        <ScrollViewer Grid.Row="7"
                  VerticalScrollBarVisibility="Hidden"
                  PanningMode="VerticalOnly"
                  IsManipulationEnabled="True"
                  CanContentScroll="False"
                  PanningDeceleration="0.001"
                  PanningRatio="1">
            <StackPanel x:Name="st_Categories" Orientation="Vertical"/>
        </ScrollViewer>
    </Grid>


</Page>
