    <Style x:Key="CancelButton" TargetType="Button">
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="MinWidth" Value="140"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#CCCCCC"/>
            </Trigger>

            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#B0B0B0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="TakeawayButton" TargetType="Button">
        <Setter Property="Background" Value="#FFF7E6"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="80"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderBrush" Value="#FFE0B2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="12"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Olib ketish"
                                   FontWeight="Bold"
                                   FontSize="15"
                                   Foreground="Black"
                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFEFCC"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#FFE4B3"/>
            </Trigger>

            <Trigger Property="Tag" Value="Selected">
                <Setter Property="Background" Value="#FFA726"/>
                <!-- Orange -->
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#FB8C00"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="AddProductButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border 
                        CornerRadius="0 8 8 0"
                        Background="{TemplateBinding Background}" 
                        Padding="3">

                        <Path 
                            Data="M8,0 L8,8 L0,8 L0,10 L8,10 L8,18 L10,18 L10,10 L18,10 L18,8 L10,8 L10,0 Z" 
                            Fill="Gray" 
                            Width="40" 
                            Height="40"
                            Stretch="UniformToFill"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#ECECEC"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#DADADA"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="CancelIconButton" TargetType="Button">
        <Setter Property="Width" Value="15"/>
        <Setter Property="Height" Value="15"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid
                        Background="Transparent">
                        <Path x:Name="pathIcon"
                          Data="{DynamicResource CancelIcon}"
                          Fill="#FF5555"
                          Stroke="#FF5555"
                          StrokeThickness="1"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          Stretch="UniformToFill"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="pathIcon" Property="Fill" Value="#D32F2F"/>
                            <Setter TargetName="pathIcon" Property="Stroke" Value="#D32F2F"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="pathIcon" Property="Fill" Value="#B71C1C"/>
                            <Setter TargetName="pathIcon" Property="Stroke" Value="#B71C1C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DropShadowEffect x:Key="ShadowEffect"
                      Color="Black"
                      BlurRadius="5"
                      ShadowDepth="2"
                      Opacity="0.1"/>

    <Style x:Key="ClosedButton" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border 
                        x:Name="B"
                        Background="Transparent"
                        CornerRadius="25">

                        <Path 
                            Fill="Black" 
                            Data="{DynamicResource x}"
                            Height="20"
                            Width="20"
                            Stretch="Uniform"/>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MessageWindow_Button" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="140"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border 
                        x:Name="B"
                        CornerRadius="8"
                        Background="#009688"
                        SnapsToDevicePixels="True"
                        Padding="6 0">
                    <Label
                        FontFamily="Segoe UI"
                        FontWeight="SemiBold"
                        Foreground="White"
                        FontSize="{TemplateBinding FontSize}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Content="{TemplateBinding Content}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="B" Property="Background" Value="#26A69A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="B" Property="Background" Value="#00796B"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="B" Property="Background" Value="#B2DFDB"/>
                            <Setter TargetName="B" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MessageWindow_Header" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="#009688"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect 
                    BlurRadius="8"
                    ShadowDepth="0"
                    Color="#40000000"
                    Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Colculator_Button" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="70"/>
        <Setter Property="MinWidth" Value="75"/>
        <Setter Property="Margin" Value=" 5"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    
                    <Border 
                        x:Name="B"
                        CornerRadius="8"
                        Background="Transparent"
                        BorderBrush="Gray"
                        Padding="10 0"
                        BorderThickness="1.5">
                        
                        <Label
                            Name="lb"
                            FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Content="{TemplateBinding Content}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="B" Property="Background" Value="Gray"/>
                            <Setter TargetName="lb" Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Clear_Button" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="70"/>
        <Setter Property="Width" Value="160"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">

                    <Border 
                        x:Name="B"
                        CornerRadius="8"
                        Background="Transparent"
                        BorderBrush="Gray"
                        Padding="10 0"
                        BorderThickness="1.5">

                        <Path
                            Width="40"
                            Height="40"
                            Name="lb"
                            Fill="Black"
                            Stretch="Uniform"
                            Data="{DynamicResource clear}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="B" Property="Background" Value="Gray"/>
                            <Setter TargetName="lb" Property="Fill" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Save_Button" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="70"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">

                    <Border 
                        x:Name="B"
                        CornerRadius="8"
                        Background="#DBDBDB"
                        BorderBrush="Gray"
                        Padding="10 0"
                        BorderThickness="1.5">

                        <Path
                            Width="30"
                            Height="30"
                            Name="lb"
                            Fill="Black"
                            Stretch="Uniform"
                            Data="{DynamicResource save}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="B" Property="Background" Value="Gray"/>
                            <Setter TargetName="lb" Property="Fill" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="NextButton" TargetType="Button">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="B"
                        CornerRadius="3"
                        Background="Transparent"
                        Width="25">

                        <Path 
                            Name="I"
                            Fill="#383838" 
                            Data="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                            Height="15"
                            Width="15"
                            Stretch="Uniform"/>

                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="B" Property="Background" Value="#464646"/>
                            <Setter TargetName="I" Property="Fill" Value="White"/>
                        </Trigger>
